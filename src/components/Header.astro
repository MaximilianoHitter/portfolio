<header
  class="flex
  justify-around
  items-center
  gap-10
  py-3
  w-[900px]
  mt-5
  border-slate-500
  md:justify-center
  rounded-full"
>
  <img
    class="rounded-full w-12 h-12 transform transition duration-300 hover:rotate-minus20"
    src="https://avatars.githubusercontent.com/u/89142014?v=4"
    alt="from Github's profile"
    id="avatar"
  />

  <nav class="relative">
    <div class="md:hidden flex justify-between items-center p-4">
      <button
        id="menu-btn"
        class="block hamburger md:hidden focus:outline-none color-white"
      >
        <span class="hamburger-top color-white bg-white"></span>
        <span class="hamburger-middle color-white bg-white"></span>
        <span class="hamburger-bottom color-white bg-white"></span>
      </button>
    </div>

    <!-- Menú -->
    <div
      id="menu"
      class="hidden md:flex flex-row gap-x-10 opacity-90 justify-center p-4"
    >
      <a
        class="hover:underline hover:opacity-100 opacity-80 transform transition duration-300 hover:rotate-plus20"
        href="/">Home</a
      >
      <a
        class="hover:underline hover:opacity-100 opacity-80 transform transition duration-300 hover:rotate-minus20"
        href="/about">About</a
      >
      <a
        class="hover:underline hover:opacity-100 opacity-80 transform transition duration-300 hover:rotate-plus20"
        href="/proyects">Proyects</a
      >
      <a
        class="hover:underline hover:opacity-100 opacity-80 transform transition duration-300 hover:rotate-plus20"
        href="/github">GH-stats</a
      >

      <!-- <a
        class="hover:underline hover:opacity-100 opacity-80 transform transition duration-300 hover:rotate-minus20"
        href="/contact">Contact</a
      > -->
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("menu");
  const avatar = document.getElementById("avatar");

  btn?.addEventListener("click", () => {
    btn.classList.toggle("open");
    menu?.classList.toggle("hidden");
    menu?.classList.toggle("flex");
    avatar?.classList.toggle("hidden");
  });
</script>

