  }

  /* Animación del icono cuando el menú está abierto */
  .open .hamburger-top {
    transform: rotate(45deg);
    position: relative;
    top: 8px;
  }

  .open .hamburger-middle {
    opacity: 0;
  }

  .open .hamburger-bottom {
    transform: rotate(-45deg);
    position: relative;
    top: -8px;
  }

  #menu-btn > button,
  #menu-btn > span {
    background: white;
    color: white;
  }
</style>

