---
import Html from "./icons/lenguajes/Html.astro";
import Css from "./icons/lenguajes/Css.astro";
import Js from "./icons/lenguajes/Js.astro";
import Php from "./icons/lenguajes/Php.astro";
import Mk from "./icons/lenguajes/Mk.astro";
import Ts from "./icons/lenguajes/Ts.astro";
import Py from "./icons/lenguajes/Py.astro";
import As from "./icons/lenguajes/As.astro";
import Scss from "./icons/lenguajes/Scss.astro";

export interface Props {
  language: string;
}

const { language } = Astro.props;
---

<div>
  {language == "HTML" && <Html />}
  {language == "CSS" && <Css />}
  {language == "JavaScript" && <Js />}
  {language == "PHP" && <Php />}
  {language == null && <Mk />}
  {language == "TypeScript" && <Ts />}
  {language == "Python" && <Py />}
  {language == "Astro" && <As />}
  {language == "SCSS" && <Scss />}
</div>
