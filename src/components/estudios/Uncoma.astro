---
import SuccessBadge from "../SuccessBadge.astro";
import Arrow from "../icons/Arrow.astro";
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-3 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
  >August 2021 - November 2023</time
>
<h3 class="text-lg font-semibold text-white">
  University degree in web development - <SuccessBadge>Passed</SuccessBadge>
</h3>
<p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
  National University of Comahue
</p>
<ul>
  <li class="link-card w-fit group">
    <a
      href="https://uncoma.edu.ar/carreras/tecnicatura-universitaria-en-desarrollo-web/"
      target="_blank"
      class="gap-2 cursor-pointer flex justify-center flex-row items-center rounded-full px-1 py-1 w-fit h-fit text-sm border-slate-600 border-2"
    >
      Carreer description
      <Arrow />
    </a>
  </li>
</ul>

<style is:inline>
  details {
    overflow: hidden;
    transition: max-height 1s all;
    max-height: 2.5rem; /* Altura del resumen cuando estÃ¡ cerrado */
  }

  details[open] {
    max-height: 500px; /* Suficiente para mostrar el contenido expandido */
  }
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    border-radius: 7px;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: fit-content;
    text-decoration: none;
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
