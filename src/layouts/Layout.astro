---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import "@fontsource/poppins";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Maximiliano Ariel Hitter's Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Maximiliano Ariel Hitter's Portfolio</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
  >
    <div class="">
      <div class="flex justify-center">
        <Header />
      </div>
      <slot />
    </div>
  </body>
</html>
<style is:global>
  :root {
    color-scheme: dark;
  }
  html {
    font-family: "Poppins", system-ui, sans-serif;
  }
  body {
    /* background: #13151a; */
    min-height: 100vh;
  }
</style>
